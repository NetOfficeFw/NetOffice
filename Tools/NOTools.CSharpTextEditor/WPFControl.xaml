<UserControl x:Class=" NOTools.CSharpTextEditor.WPFControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:avalondock="http://avalondock.codeplex.com"
             xmlns:codecomplete="clr-namespace:ICSharpCode.AvalonEdit.CodeCompletion;assembly=ICSharpCode.AvalonEdit.CodeCompletion"
             mc:Ignorable="d" 
             d:DesignHeight="183" d:DesignWidth="188">
        <avalonedit:TextEditor 
            Name="TextEditor1"
            SyntaxHighlighting="C#"
            FontFamily="Courier New"
            FontSize="10pt"
            Document="{Binding CodeDocument}" TextChanged="TextEditor1_TextChanged" ShowLineNumbers="True">
        <avalonedit:TextEditor.Options>
            <avalonedit:TextEditorOptions ConvertTabsToSpaces="True" EnableTextDragDrop="True" />
        </avalonedit:TextEditor.Options>
        <i:Interaction.Behaviors>
        </i:Interaction.Behaviors>
    </avalonedit:TextEditor>
</UserControl>
